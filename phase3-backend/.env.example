# Phase 3 Backend Configuration (.env.example)
# Copy this to .env and fill in your values

# Database Configuration
# Use the same DATABASE_URL as Phase 2 (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host.neon.tech/dbname?sslmode=require

# OpenAI Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# JWT Secret (MUST match Phase 2 backend and Phase 3 frontend)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-secret-key-here

# JWT Algorithm (should match Phase 2)
JWT_ALGORITHM=EdDSA

# MCP Server URL
# URL of the Phase 3 MCP Server
MCP_SERVER_URL=http://localhost:8002

# Phase 2 Backend URL (for reference, not used directly by Phase 3 backend)
PHASE2_BACKEND_URL=http://localhost:8000

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3001,http://localhost:3000

# Server Configuration
PORT=8001
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO
