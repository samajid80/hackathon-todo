# Phase 3 Frontend Configuration (.env.local.example)
# Copy this to .env.local and fill in your values

# Database Configuration
# Use the same DATABASE_URL as Phase 2 (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host.neon.tech/dbname?sslmode=require

# Better-Auth Configuration
# MUST match JWT_SECRET from Phase 2 backend and Phase 3 backend
BETTER_AUTH_SECRET=your-secret-key-here
BETTER_AUTH_URL=http://localhost:3001

# Backend URLs
# Phase 3 Backend (Chat Service)
NEXT_PUBLIC_BACKEND_URL=http://localhost:8001

# Phase 2 Backend (Task API) - for reference
NEXT_PUBLIC_PHASE2_BACKEND_URL=http://localhost:8000
